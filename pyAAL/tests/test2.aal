"""

CLAUSE c1(
    FORALL d:data WHERE d.subject == bob FORALL a:agent
    ALWAYS(
        PERMIT bob.read[a](d) AND
        DENY bob.send[a](d) AND
        not (not (bob.read[a](d))) AND
        ALWAYS (not (bob.write[a]()))
    )
)

