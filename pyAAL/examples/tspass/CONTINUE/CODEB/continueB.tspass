%% PPS_pcMember_rc RESOURCE pcMember_rc
%%%% PERMIT pc_member read anyresource 
(![a,r] ((PcMember(r) & pcmember(a)) => Pread(a, r)))
%%%% PERMIT admin create write anyresource
(![a,r] ((PcMember(r) & admin(a)) => (Pcreate(a, r) & Pwrite(a, r))))
