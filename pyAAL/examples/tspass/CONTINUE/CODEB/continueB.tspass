%%%% for roles
(?[x] AnySubject(x)) & (?[x] admin(x)) & (?[x] pcchair(x)) & (?[x] pcmember (x)) & (?[x] subreviewer(x))
%%% subtype/inclusion
(![x] ((admin(x) | pcchair(x) | pcmember (x) | subreviewer(x)) => AnySubject(x)))
%% %%% for action
(![a, r] ((Pdelete(a, r) | Pcreate(a, r) | Pread(a, r) | Pwrite(a, r)) <=> PAnyAction(a, r)))

