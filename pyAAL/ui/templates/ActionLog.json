{
    "name": "Actions log",
	"desc": "Log event when a specific action is performed.",
	"vars": [
      {"name": "", "id": "read", "type": "checkbox", "pre": "", "post": "Read"},
	  {"name": "", "id": "write", "type": "checkbox", "pre": "", "post": "Write"},
      {"name": "", "id": "update", "type": "checkbox", "pre": "", "post": "Update"},
      {"name": "", "id": "delete", "type": "checkbox", "pre": "", "post": "Delete"},
      {"name": "", "id": "action", "type": "text", "pre": "Action ", "post": ""},
      {"name": "", "id": "resource", "type": "text", "pre": " ", "post": " Resource"},
      {"name": "", "id": "owner", "type": "text", "pre": " ", "post": " Owner"},
      {"name": "", "id": "user", "type": "text", "pre": " ", "post": " User"},
      {"name": "", "id": "permit", "type": "checkbox", "pre": "", "post": ""}
    ],
	"aal": [
      "IF( ",
      "\n\t{{ (({read}.checked)?'PERMIT {user}.val.read[{owner}.val]({resource}.val)':'') }}",
      "\n\t{{ (({read}.checked && {write}.checked)?'OR ':'') + (({write}.checked)?'PERMIT {user}.val.write[{owner}.val]({resource}.val)':'') }}",
      "\n\t{{ (({update}.checked && ({read}.checked || {write}.checked )) ?'OR ':'') + (({update}.checked)?'PERMIT {user}.val.update[{owner}.val]({resource}.val)':'') }}",
      "\n\t{{ (({delete}.checked && ({read}.checked ||Â {write}.checked || {update}.checked))?'OR ':'') + (({delete}.checked)?'PERMIT {user}.val.delete[{owner}.val]({resource}.val)':'') }}",

      "\n\t{{ (({permit}.checked && ({read}.checked || {write}.checked || {update}.checked ||{delete}.checked))?'OR ':'') + (({permit}.checked)?'PERMIT {user}.val.{action}.val[{owner}.val]({resource}.val)':'') }}",
      "\n) THEN { \n\tMUST({owner}.val.log[{owner}.val]({resource}.val)) \n}"

    ],
	"html": [
      "<div class='varGroupe'> {resource} </div>",
      "<div class='varGroupe'> {user} </div>",
      "<div class='varGroupe'> {owner} </div>",
      "<div class='varGroupe'><h4 class='varsHeader'>Standard Actions :</h4>",
      " {read} {write} {update} {delete} </div> ",
      "<div class='varGroupe'><h4 class='varsHeader'>Other Actions :</h4> {action} {permit}</div> {genBtn}"
    ],
	"xacml": ""
}
