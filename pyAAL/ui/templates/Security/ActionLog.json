{
    "name": "Actions log",
	"desc": "Log event when a specific action is performed.",
	"vars": [
      {"name": "", "id": "action", "type": "select", "pre": " Action ", "post": "", "src": "{aal.services}"},
      {"name": "", "id": "resource", "type": "text", "pre": " Resource ", "post": "  "},
      {"name": "", "id": "owner", "type": "select", "pre": " Owner ", "post": " ", "src": "{aal.agents}"},
      {"name": "", "id": "user", "type": "select", "pre": " User ", "post": " ", "src": "{aal.agents}"}
    ],
	"aal": [
      "{{ (('{resource}.val' == '')? 'FORALL d:data\\",
      "nIF (d.subject == {user}.val' : 'IF ({resource}.val.subject == {user}.val')}}",
      "AND {user}.val.{action}.val[{owner}.val]({resource}.val) ) THEN {\n\t MUST( {owner}.val.log[{owner}.val](",
      "\"user:{user}.val;action:{action}.val;resource:{resource}.val;owner:{owner}.val\") ) \n} AND "
    ],
	"html": [
      "<div class='varGroupe'> {resource} {owner} </div>",
      "<div class='varGroupe'> {user}</div>",
      "<div class='varGroupe'> {action}</div> {genBtn}"
    ],
	"xacml": ""
}
